<p id="notice"><%= notice %></p>

<h1>Listing Providers</h1>

<table>
  <thead>
    <tr>
      <th>Businessname</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Phonenumber</th>
      <th>Email</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Description</th>
      <th>Url</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.businessname %></td>
        <td><%= provider.firstname %></td>
        <td><%= provider.lastname %></td>
        <td><%= provider.phonenumber %></td>
        <td><%= provider.email %></td>
        <td><%= provider.street %></td>
        <td><%= provider.city %></td>
        <td><%= provider.state %></td>
        <td><%= provider.zip %></td>
        <td><%= provider.description %></td>
        <td><%= provider.url %></td>
        <td><%= provider.active %></td>
        <td><%= link_to 'Show', provider %></td>
        <td><%= link_to 'Edit', edit_provider_path(provider) %></td>
        <td><%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

